<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <ImageView android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_height="48dp" android:layout_width="48dp" android:id="@+id/image"/>
    <TextView android:layout_height="wrap_content" android:id="@+id/text" android:layout_centerVertical="true" android:layout_toRightOf="@+id/image" 
        android:layout_alignBottom="@+id/image" android:layout_width="match_parent" android:textSize="32dp"/>
    
</RelativeLayout>
